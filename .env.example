# Simple PDF Splitter - Environment Configuration Template
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# Flask Configuration
FLASK_ENV=development  # Options: development, production
FLASK_DEBUG=False      # Set to False in production

# CRITICAL: Generate a secure secret key for production
# To generate a secure key, run:
# python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-must-be-changed

# Server Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Upload Configuration
MAX_CONTENT_LENGTH_MB=100
UPLOAD_FOLDER=temp_uploads

# Session Configuration
SESSION_COOKIE_SECURE=True     # Set to True when using HTTPS
SESSION_COOKIE_HTTPONLY=True   # Prevents JavaScript access
SESSION_COOKIE_SAMESITE=Lax    # CSRF protection

# Security Configuration
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600  # 1 hour in seconds

# Rate Limiting (requests per minute)
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=60
RATELIMIT_UPLOAD=10
RATELIMIT_PROCESS=20

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5