# Simple PDF Splitter - Local Development Environment
# This file should NEVER be committed to version control

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# CRITICAL: This is a development key only
# For production, generate a new key with:
# python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=dev_secret_key_a7f3b9c2d4e6f8a1b3c5d7e9f0a2b4c6d8e0f2a4b6c8d0e2f4a6b8c0d2e4f6

# Server Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Upload Configuration
MAX_CONTENT_LENGTH_MB=100
UPLOAD_FOLDER=temp_uploads

# Session Configuration
SESSION_COOKIE_SECURE=False    # False for local development (no HTTPS)
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Security Configuration
WTF_CSRF_ENABLED=False
WTF_CSRF_TIME_LIMIT=3600

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=60
RATELIMIT_UPLOAD=10
RATELIMIT_PROCESS=20

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5